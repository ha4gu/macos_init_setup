{
  "title": "その他",
  "rules": [
    {
      "description": "Ctrl+Command+Q（画面をロック）にOption+Lを割り当てる",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "q", "modifiers": [ "control", "command" ] } ]
        }
      ]
    },
    {
      "description": "F13にShift+Spaceを割り当てる（併せてmacOS側でF13を入力ソース切り替えに割り当てること）",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "spacebar", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "f13" } ]
        }
      ]
    }
  ]
}
